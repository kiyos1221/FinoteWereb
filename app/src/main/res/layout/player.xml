<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <com.example.jean.jcplayer.JcPlayerView
        android:id="@+id/jcplayer"
        android:layout_alignParentBottom="true"
        tools:layout_editor_absoluteY="435dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        tools:layout_editor_absoluteX="8dp" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
<android.support.v7.widget.CardView
    app:cardElevation="5dp"
    android:id="@+id/geez_wrapper"
    app:cardUseCompatPadding="true"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <TextView
        android:paddingTop="10dp"
        android:textSize="20sp"
        android:textColor="#000"
        android:textStyle="bold"
        android:id="@+id/title"
        android:text="ውስተ አፍላገ ባቢሎን"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <com.a360ground.finotewereb.GetWordTextView
        android:paddingTop="10dp"
        android:textSize="18sp"
        android:layout_below="@+id/title"
        android:id="@+id/geez_content"
        android:text="ውስተ አፍላገ ባቢሎን ህየ ነበርነ ወበከይነ ምእመናኒሃ \n ሶበ ተዘከርናሃ ለ ጽዮን"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    </RelativeLayout>
</android.support.v7.widget.CardView>
    <RelativeLayout
        android:id="@+id/toolWrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/geez_wrapper">
        <TextView
            android:id="@+id/tirgum"
            android:padding="10dp"
            android:textSize="20sp"
            android:text="ትርጉም"
            android:textColor="#ff0000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/share"
            android:layout_alignParentRight="true"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:paddingTop="15dp"
            android:background="@android:drawable/ic_menu_share"/>

    </RelativeLayout>
    <android.support.v7.widget.CardView
        app:cardElevation="5dp"
        android:id="@+id/amharic_wrapper"
        app:cardUseCompatPadding="true"
        android:layout_below="@+id/toolWrapper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.androidessence.pinchzoomtextview.PinchZoomTextView
                android:paddingTop="10dp"
                android:textSize="18sp"
                android:id="@+id/amharic_content"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>
        </RelativeLayout>
</android.support.v4.widget.NestedScrollView>
</RelativeLayout>